<div id='content' style= 'color: #34495e'>
<h1><%= name %></h1>
<div><%= description %></div>
<button class='upvote vote' id='<%= id %>' style= 'background:#34495e; color:white; border: 0px; padding: 2px'>Upvote</button>
<button class='downvote vote' id='<%= id %>' style= 'background:#34495e; color:white; border: 0px; padding: 2px'>Downvote</button>
<div class='vote_counter' id='<%= id %>'>Vote Count: <%= vote_count %></div>

<% if(gon.current_user){ %>
  <!-- Delete tag button -->
  <p><button class='deleteButton' id='<%= id %>' style= 'background:#34495e; color:white; border: 0px; padding: 2px'>Remove This Tag</button></p>
  <!-- Upload photo button -->
  <a href="/potholes/<%= id %>/photos"><button class='addPhotosButton' id='<%= id %>' style= 'background:#34495e; color:white; border: 0px; padding: 2px'>Upload a Photo</button></a>
<% } %>

<button class='showPhotosButton showHide' id='<%= id %>' style= 'background:#34495e; color:white; border: 0px; padding: 2px'>Photo Gallery</button>


<div class='photosContent hidden' id='<%= id %>'>
  <button class='hidePhotosButton showHide' id='<%= id %>' style= 'background:#34495e; color:white; border: 0px; padding: 2px'>Hide Gallery</button>


